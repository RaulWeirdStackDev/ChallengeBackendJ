generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model productos {
  id          Int    @id @default(autoincrement())
  nombre      String @db.VarChar(255)
  descripcion String
  precio      Int
  stock       Int
}

model usuarios {
  id       Int    @id @default(autoincrement())
  email    String @unique @db.VarChar(255)
  password String @db.VarChar(255)
}
